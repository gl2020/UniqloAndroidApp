<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="preferences"
        app:title="Preferences">

        <ListPreference
            app:key="theme"
            app:title="Theme"
            app:entries="@array/themes"
            app:entryValues="@array/themes"
            app:useSimpleSummaryProvider="true"
            />

    </PreferenceCategory>

    <PreferenceCategory
        app:key="profile"
        app:title="Profile">

        <EditTextPreference
            android:key="name"
            android:title="Name"
            android:dialogTitle="Name"
            app:useSimpleSummaryProvider="true"/>

        <EditTextPreference
            android:key="email"
            android:title="Email"
            android:dialogTitle="Email"
            app:useSimpleSummaryProvider="true"/>


    </PreferenceCategory>

</PreferenceScreen>